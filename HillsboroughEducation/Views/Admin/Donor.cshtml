@model IEnumerable<HillsboroughEducation.Models.Donors>
@{
    ViewBag.Title = "Donor";
}

@using (Html.BeginForm())
{

    <h2>@Html.ActionLink("Add new donor", "CreateDonor", "Admin")</h2>

    <p>
        Search by: Donor Name<br />
        @Html.TextBox("SearchString")
        <input type="submit" value="Submit" />
    </p>
}
<table>
    <tr>
        <th>
            @Html.ActionLink("Donor ID", "Donor", new { sortOrder = ViewBag.DonorIdSortParam })
        </th>
        <th>
            @Html.ActionLink("Donor Name", "Donor", new { sortOrder = ViewBag.DonorNameSortParam })
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAME)
            </td>
    
            <td>
                @Html.ActionLink("Edit", "EditDonor", new { id = item.ID })
                @Html.ActionLink("Details", "DonorInfo", new { id = item.ID })
            </td>
        </tr>
    }
</table>

