@model IEnumerable<HillsboroughEducation.Models.Reviewers>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Reviewer</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        <h2>@Html.ActionLink("Add new reviewer", "CreateReviewer", "Admin")</h2>

        <p>
            Search by: Last name, First name, or Academic Year <br />
            @Html.TextBox("SearchString")
            <input type="submit" value="Submit" />
        </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Last Name", "Reviewer", new { sortOrder = ViewBag.LastNameSortParam })
            </th>
            <th>
                @Html.ActionLink("First Name", "Reviewer", new { sortOrder = ViewBag.FirstNameSortParam })
            </th>
            <th>
                @Html.ActionLink("Academic Year", "Reviewer", new { sortOrder = ViewBag.AcademicYearSortParam })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LAST_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FIRST_NAME)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ACADEMIC_YEAR)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditReviewer", new { id = item.REVIEWER_ID })
                    @Html.ActionLink("Details", "ReviewerInfo", new { id = item.REVIEWER_ID })
                </td>
            </tr>
        }
    </table>
</body>
</html>
