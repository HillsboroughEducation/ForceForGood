@model IEnumerable<HillsboroughEducation.Models.StudentModel>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Student</title>
</head>
<body>
    @using (Html.BeginForm())
    {
    <p>
        Search by: Last name, First name, Student #, D.O.B, or Academic Year <br/>
        @Html.TextBox("SearchString")
        <input type="submit" value="Submit" />
    </p>
    }
    <table class="table">
        <tr>
            <th>
                @Html.ActionLink("Last Name", "Student", new { sortOrder = ViewBag.LastNameSortParam })
            </th>
            <th>
                @Html.ActionLink("First Name", "Student", new { sortOrder = ViewBag.FirstNameSortParam })
            </th>
            <th>
                @Html.ActionLink("Student #", "Student", new { sortOrder = ViewBag.StudentNumberSortParam })
            </th>
            <th>
                @Html.ActionLink("Username", "Student", new { sortOrder = ViewBag.UserNameSortParam })
            </th>
            <th>
                @Html.ActionLink("D.O.B", "Student", new { sortOrder = ViewBag.BirthDateSortParam })
            </th>
            <th>
                @Html.ActionLink("Academic Year", "Student", new { sortOrder = ViewBag.AcademicYearSortParam })
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcademicYear)
                </td>
                <td>
                    @Html.ActionLink("Details", "StudentInfo", new { id = item.UserId })
                </td>
            </tr>
        }
    </table>
</body>
</html>
