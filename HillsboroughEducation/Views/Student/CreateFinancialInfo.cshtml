@model HillsboroughEducation.Models.StudentFinancialModel

@{
    ViewBag.Title = "FinancialInfo";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

 <fieldset>
        <legend>Financial Information</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.AdjustedGrossIncome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdjustedGrossIncome)
            @Html.ValidationMessageFor(model => model.AdjustedGrossIncome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumberInHousehold)
        </div>
        <div class="editor-field">
            @Html.DropDownList("NumberInHousehold", String.Empty)
            @Html.ValidationMessageFor(model => model.NumberInHousehold)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>  
}

<div>
    @Html.ActionLink("Back to my Financial Info", "MyInfo")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}