@model HillsboroughEducation.Models.StudentFinancialModel

@{
    ViewBag.Title = "EditFinancialInfo";
}

<h2>EditFinancialInfo</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

 <fieldset>
        <legend>Financial Information</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model.AdjustedGrossIncome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.AdjustedGrossIncome)
            @Html.ValidationMessageFor(model => model.AdjustedGrossIncome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NumberInHousehold)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NumberInHousehold)
            @Html.ValidationMessageFor(model => model.NumberInHousehold)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>  
}

<div>
    @Html.ActionLink("Save Changes", "MyInfo")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}