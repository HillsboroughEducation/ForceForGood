@model HillsboroughEducation.Models.ScholarshipModel

@{
    ViewBag.Title = "ScholarshipApplication";
}

<script>
    $m = jQuery.noConflict();
</script>
<script type="text/javascript">
    $m(document).ready(function () {
        $m('#tabs').tabs();
    });
</script>

<body>


    <div id="tabs">

        <ul>
            <li>@Html.ActionLink("Scholarship Information", "ScholarshipDetails", "Student", new { id = Model.ID }, "")</li>
            <li><a href="#application">Application</a></li>
            <li><a href="#letters">Letters</a></li>
            <li><a href="#documents">Documents</a></li>
        </ul>

        <div id="application">
            <h3>Application Scholarship Questions</h3>

            Type of Student:

            <div class="row">
                <div class="col-md-6">
                    School Name:
                    <input type="text" class="form-control" placeholder="@Html.DisplayText("")">
                </div>
                <div class="col-md-4">
                    Exp. HS Graduation Date:
                    <input type="text" class="form-control" placeholder="@Html.DisplayText("")">
                </div>
                <div class="col-md-2">
                    GPA:
                    <input type="text" class="form-control" placeholder="@Html.DisplayText("")">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    Major are of study or program:
                    <input type="text" class="form-control" placeholder="@Html.DisplayText("")">
                </div>
                <div class="col-md-6">
                    Exp. Degree:
                    <input type="text" class="form-control" placeholder="@Html.DisplayText("")">
                </div>
            </div>
        </div>

        <div id="scores">
            <h3>Test Scores</h3>
            <h3>ACT_SCORES_COME_UNDER_THIS_GROUP Scores</h3>
            <h3>SAT_SCORES_COME_UNDER_THIS_GROUP Scores</h3>
            <h3>FAFSA_SCORE Scores</h3>
        </div>

        <div id="question">
            <h3>Opening Questionnaire</h3>
            <div class="row">
                <div class="col-md-12">
                    Which of the following types of student most closely matches you?
                    @Html.DisplayText("")
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    Do you attend a charted school?
                    @Html.DisplayText("")
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    In what grade are you?
                    @Html.DisplayText("")
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    Do you qualify for free or reduced lunch:
                    @Html.DisplayText("")
                </div>
            </div>
        </div>

        <div id="essay">
            <h3>Student Essay Questions</h3>
        </div>

        <div id="documents">
            <h3>Documents</h3>
        </div>

        <p align="right">
            <b>
                @Html.ActionLink("Back to List", "ScholarshipApplication", "Student", "", "")
            </b>
        </p>
    </div>
</body>
